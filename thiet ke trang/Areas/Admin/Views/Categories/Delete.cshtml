@model thiet_ke_trang.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>XÓA DANH MỤC</h2>

<h3 class="bg-warning">Bạn chắc chắn muốn xóa danh mục này à?</h3>
@using (Html.BeginForm())
{ @Html.AntiForgeryToken()
 <div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            Tên danh mục
        </div>
        <div class="col-md-10">
            @Html.DisplayFor(model => model.CategoryName)
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Xóa" class="btn btn-primary btn-sm" /> |
                @Html.ActionLink("Quay lại danh mục", "Index", null, new { @class = "btn btn-primary btn-sm" })
            </div>
        </div>      
    </div>
</div>
}
