@model thiet_ke_trang.Models.ViewModel.LoginVM

@{
    ViewBag.Title = "Đăng nhập";
    Layout = "~/Views/Shared/MasterLayout.cshtml";
}
<!DOCTYPE html>

<style>

    .form-horizontal {
        width: 400px;
        margin: 50px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
        background-color: #fff;
    }


    h1 {
        text-align: center;
        font-size: 24px;
        margin-bottom: 20px;
    }


    .control-label {
        text-align: right;
        padding: 5px 0;
        font-weight: bold; /* Make labels bold */
    }

    /* Input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 3px;
        box-sizing: border-box; /* Ensure consistent sizing */
        margin-bottom: 15px;
    }

    /* Validation messages */
    .text-danger {
        color: red;
        font-size: 12px;
        margin-bottom: 5px;
    }


    .btn-default {
        background-color: cornflowerblue;
        color: white;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.2s ease-in-out;

    }

        .btn-default:hover {
            background-color: #337ab7;
        }
</style>


<div>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))

    {
        @Html.AntiForgeryToken()
    }
    <div class="form-horizontal">
        <h2>
            Đăng nhập
        </h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Username, htmlAttributes: new { @class = "control-label " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label " })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Đăng nhập" class="btn btn-default" syle=" width: 275px; height: 40px; border: 1px solid #808080; margin: 5px; align-items: center; background-color: cornflowerblue;" />
           <p>Bạn chưa có tài khoản? <a href="~/Account/Register" style="text-decoration:none; color:deepskyblue;">Đăng ký </a> </p>
            </div>
        </div>
    </div>
</div>
