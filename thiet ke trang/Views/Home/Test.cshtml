        display: flex;
        justify-content: center;
        gap: 30px;
    }

    .anh2 {
        background-image: url('../../content/images/nenhong.jpg');
        background-size: cover;
        background-position: center;
        height: 100px;
        
        display: flex;
        align-items: center;
        justify-content: center;
        vertical-align: middle;
        color: cornsilk;
    }

    .product-use h3 a {
        text-decoration: none;
        color: #FF6683;
    }
    h3:hover{
        color:red;
    }

    .banner-content a {
        display: inLine-block;
        background-color: deeppink;
        color: white;
        text-decoration: none;
        font-weight: bold;
        font-size: 20px;
        padding: 10px;
        
    }

    section {
        font-family: sans-serif;
        text-align: center;
    }

    .slider-product-one-content {
        background-color: antiquewhite;
        padding: 12px;
    }

    .slider-product-one-content-items {
        display: flex;
        justify-content: space-evenly;
        padding-bottom: 16px;
    }

    .slider-product-one-content-item:hover img {
        transform: translateY(-15px)
    }

    .slider-product-one-content-item {
        width: 20%;
        background-color: white;
        padding: 30px 12px 12px;
        border-radius: 20px;
        cursor: pointer;
    }

    .slider-product-one-content-item img {
        width: 100%;
        transition: all 0.3s ease;
    }

    .slider-product-one-content-item-text li {
        list-style-type: none;
        margin-bottom: 6px;
        font-size: 20px;
        font-size: 15px;
        transform: translateX(-18px);
    }
    .slider-product-one-content-item-text {
        padding-top: 12px;
    }

    #de {
        color: red;
        font-size: 20px;
        background-color: antiquewhite;
    }

    .slider-product-one-content-item-text li ins {
        padding-right: 20px;
    }

    h1 {
        color: crimson;
        font-size: 30px;
    }
    .oi {
        font-size: 250%;
        text-align: center;
        color: deeppink;
    }
    .banner-content h4 {
        position:absolute;
        top:90px;
        right:575px;
    }
