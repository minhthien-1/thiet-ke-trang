    }

    .Product-item img {
        max-width: 200px;
    }

    .product-use img {
        width: 50px;
    }

    .productContainer2 {
        display: flex;
        justify-content: center;
        gap: 40px;
    }

    .product-use h3 {
        font-size: 20px;
        color: black;
        margin: 10px 0px;
    }

